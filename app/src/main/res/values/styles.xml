<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent = "Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorBase</item> <!--버튼-->
        <item name="colorPrimaryDark">@color/colorFont</item> <!--폰트-->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:backgroundTint">@color/colorBase</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:bottomLeftRadius">12dp</item>
        <item name="android:bottomRightRadius">12dp</item>
        <item name="android:topLeftRadius">12dp</item>
        <item name="android:topRightRadius">12dp</item>
    </style>

    <style name="FontStyle02">
        <item name="android:textColor">@color/colorFont</item>
    </style>

    <style name="FontStyle01">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">16sp</item>
        <itme name="android:textStyle">bold</itme>
    </style>

    <style name="BackgroundStyle">
        <item name="android:background">@color/colorBackground</item>
    </style>

</resources>